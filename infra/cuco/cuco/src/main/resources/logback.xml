  <appender name="DefaultCorporateDirectorySynchronizationService" class="ch.qos.logback.core.FileAppender">
    <File>d:/logs/cuco/corporate-directory-synchronization.log</File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
