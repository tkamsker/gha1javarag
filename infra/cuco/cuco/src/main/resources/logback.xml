<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration debug="true" scan="true">
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/cuco.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %-30(%date{ISO8601} [%thread]) %-5level %X{user} %logger{35} - %msg%n
        </Pattern>
      </layout>
    </encoder>
  </appender>

  <appender name="GWT-LOGFILE" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/client.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %-30(%date{ISO8601} [%thread]) %-5level %X{user} %logger{35} - %msg%n
        </Pattern>
      </layout>
    </encoder>
  </appender>

  <appender name="SQL" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/sql.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %-30(%date{ISO8601} [%thread]) %-5level %X{user} %logger{35} - %msg%n
        </Pattern>
      </layout>
    </encoder>
  </appender>

  <appender name="MAILINGS" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/mailings.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %date{ISO8601} %X{user} %msg%n
        </Pattern>
      </layout>
    </encoder>
  </appender>

  <appender name="INVOICEDOWNLOADS" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/invoiceaudit.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %date{ISO8601} [%thread] %-5level %X{user} - %msg%n
        </Pattern>
      </layout>
    </encoder>
  </appender>
  
   <appender name="INVOICEPERFORMANCE" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/invoiceperformance.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %date{ISO8601} [%thread] %-5level %X{user} - %msg%n
        </Pattern>
      </layout>
    </encoder>
  </appender>

  <appender name="TRACKING" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/tracking.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="at.a1ta.bite.commons.logging.BiteLogEventLayout" />
    </encoder>
  </appender>

  <appender name="APPLICATION" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/application.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="at.a1ta.bite.commons.logging.BiteLogEventLayout" />
    </encoder>
  </appender>

  <appender name="REPORTING" class="ch.qos.logback.core.FileAppender">
    <File>
      d:/logs/cuco/reporting.log
    </File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="at.a1ta.bite.commons.logging.BiteLogEventLayout" />
    </encoder>
  </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>
        %date{ISO8601} [%thread] %-5level %X{user} %class - %msg%n
      </pattern>
    </layout>
  </appender>

  <appender name="AUDITLOG" class="at.a1ta.bite.audit.core.RollingFileAuditAppender">
    <!-- encoder is optional if not specified default layout will be used -->
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="at.a1ta.bite.audit.core.AuditEventLayout" />
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover for local testing -->
      <fileNamePattern>
        d:/logs/cuco/audit.%d{yyyy-MM-dd}.log
      </fileNamePattern>
      <maxHistory>
        30
      </maxHistory>
    </rollingPolicy>
  </appender>

  <appender name="esb" class="ch.qos.logback.core.FileAppender">
    <File>d:/logs/cuco/esb/esb.log</File>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>%-30(%date{ISO8601} [%thread]) %-5level %X{user} %logger{35} - %msg%n</Pattern>
      </layout>
    </encoder>
  </appender>

 <appender name="GAMIFICATION" class="ch.qos.logback.core.FileAppender">
