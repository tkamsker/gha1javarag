<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:bite="urn:import:at.a1ta.bite.ui.client.widget">
    
    <ui:with field='style' type='at.a1ta.bite.ui.client.bundle.StyleResources' />
    <ui:with field='admintextpool' type='at.a1ta.cuco.admin.ui.common.client.bundle.AdminCommonTextPool'/>

	<g:HTMLPanel>
	   <bite:Label text="{admintextpool.unknownareacodeDialogHeading}" />
	  <div class="{style.bite_moduleHeader}" style="padding-top:5px;" />
      <div class="{style.bite_moduleContent}">
      <table class="{style.bite_form}">
      <tr>
      <td>
      <bite:Label styleName="{style.bite_text}" text="{admintextpool.unknownareacodeDialogNameLabel}" />
      </td>
      <td>
      <bite:InputBox ui:field="areaCode" size="Long" mandatoryValidation="true" validationErrorMessage="{admintextpool.unknownareacodeDialogValidation}" maxLength="64"/>
      </td></tr>
      <tr>
      <td>
      <bite:Label styleName="{style.bite_text}" text="{admintextpool.unknownareacodeDialogDescriptionLabel}" />
      </td>
      <td>
      <bite:TextArea ui:field="txtDescription" width="100%" height="80px" maxLength="1000" />
      </td></tr>
      </table>
      </div>
      <br/>
      <div class="{style.floating_right}">
      <bite:Button ui:field="bSave" text="{admintextpool.dialogSave}" size="Small"/>
      <bite:Button ui:field="bCancel" text="{admintextpool.dialogCancel}" size="Small"/>
      </div>
      <div class="{style.floating_clear}" />
	</g:HTMLPanel>
</ui:UiBinder>