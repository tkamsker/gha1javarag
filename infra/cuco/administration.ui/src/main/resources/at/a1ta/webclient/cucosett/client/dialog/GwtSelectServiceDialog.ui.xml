<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:at.a1ta.cuco.ui.common.client.ui.table"
    xmlns:bite="urn:import:at.a1ta.bite.ui.client.widget">
    <ui:with field='style' type='at.a1ta.bite.ui.client.bundle.StyleResources' />
    <ui:with field='admintextpool' type='at.a1ta.cuco.admin.ui.common.client.bundle.AdminCommonTextPool'/>
	<g:HTMLPanel>
	<bite:Label text="{admintextpool.teamSelectServiceHeading}" />
	<div class="{style.bite_moduleHeader}" style="padding-top:5px;" />
    <div class="{style.bite_moduleContent}" style="height:100%;">
    <table class="{style.bite_form}">
    <colgroup>
          <col width="40%" />
          <col width="60%" />
     </colgroup>
      <tr>
      <td><bite:InputBox ui:field="service" size="Long"/></td>
      <td><bite:Button ui:field="bSearch" text="Suchen" size="Small"/></td>
      </tr>
    </table>
    <table class="{style.bite_form}">
    <tr>
      <td class="{style.bite_heightPlaceHolder}"><t:DataTable ui:field="table" styleName="{style.bite_dataTable}" width ="100%" height="200px" /></td>
    </tr>
    <tr>
      <td class="{style.center}" style="padding:5px;"><bite:Button ui:field="add" text="{admintextpool.teamButtonAdd}" size="Small"/>
      <bite:Button ui:field="remove" text="{admintextpool.teamButtonDelete}" size="Small"/></td>
    </tr>
    <tr>
     <td class="{style.bite_heightPlaceHolder}"><t:DataTable ui:field="table2" styleName="{style.bite_dataTable}" width ="100%" height="200px" /></td>
    </tr>
    </table>
    <div class="{style.floating_right}" style="padding:2px;">
      <bite:Button ui:field="bSave" text="{admintextpool.dialogUse}" size="Small"/>
      <bite:Button ui:field="bCancel" text="{admintextpool.dialogCancel}" size="Small"/>
    </div>
    <div class="{style.floating_clear}" />
    </div>
	</g:HTMLPanel>
</ui:UiBinder>