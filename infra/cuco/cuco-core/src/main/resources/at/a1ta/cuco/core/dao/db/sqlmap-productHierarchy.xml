<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
  PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
  "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="ProductHierarchy">
  <cacheModel id="productHierarchy-cache" type="ehcacheProvider" readOnly="true" serialize="false">
	<flushInterval hours="2" />
	<property name="cache-size" value="1" />
  </cacheModel>

  <typeAlias alias="productHierarchy" type="at.a1ta.cuco.core.shared.dto.ProductHierarchy"/>

  <resultMap id="productHierarchy-result" class="productHierarchy">
	<result property="productId" column="SSA_PRODUKT_ID" />
	<result property="productDescription" column="PRODUKT_BES" />
	<result property="productLevel1Id" column="PRODUKTEBENE_1_ID" />
	<result property="productLevel1Description" column="PRODUKTEBENE_1_BES" />
	<result property="productLevel2Id" column="PRODUKTEBENE_2_ID" />
	<result property="productLevel2Description" column="PRODUKTEBENE_2_BES" />
	<result property="productLevel3Id" column="PRODUKTEBENE_3_ID" />
	<result property="productLevel3Description" column="PRODUKTEBENE_3_BES" />
	<result property="productLevel4Id" column="PRODUKTEBENE_4_ID" />
	<result property="productLevel4Description" column="PRODUKTEBENE_4_BES" />
  </resultMap>

  <select id="get" resultMap="productHierarchy-result" cacheModel="productHierarchy-cache">
	select * from V_PRODUKT_HIERARCHIE
  </select>

</sqlMap>
