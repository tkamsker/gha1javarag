<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
  PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
  "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="LinksPortlet">

  <typeAlias alias="linksPortlet" type="at.a1ta.cuco.core.shared.dto.LinksPortlet" />

  
  <resultMap id="linksPortletdata" class="linksPortlet">
    <result property="key" column="LINK_KEY" />
    <result property="text" column="DISPLAY_TEXT" />
    <result property="url" column="URL" />
    <result property="requiredAuthority" column="AUTHORITY" />
  </resultMap>
  
   <select id="getAllLinks" resultMap="linksPortletdata">
    SELECT cl.* FROM CUCO_LINKS cl order by link_index
  </select>
  
</sqlMap>